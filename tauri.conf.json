{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "Pizza D'Amico Steuerverwaltungssoftware",
  "version": "3.0.0",
  "identifier": "ch.pizzadamico.buchhaltung",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "Pizza D'Amico Steuerverwaltungssoftware",
        "width": 1280,
        "height": 800,
        "minWidth": 1100,
        "minHeight": 720,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi"
    ],
    "icon": [
      "icons/icon.ico"
    ]
  }
}
